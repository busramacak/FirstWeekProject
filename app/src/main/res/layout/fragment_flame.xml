<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FlameFragment"
    android:background="@color/black">


    <ImageView
        android:id="@+id/castle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/castle"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/jrFlame1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/jr_flame"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2" />
    <ImageView
        android:id="@+id/jrFlame2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/jr_flame"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2" />

    <ImageView
        android:id="@+id/jrFlame3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/jr_flame"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/flame"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="124dp"
        android:src="@drawable/mesale"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/castle"
        app:layout_constraintEnd_toEndOf="@+id/castle"
        app:layout_constraintStart_toStartOf="@id/castle" />

</androidx.constraintlayout.widget.ConstraintLayout>